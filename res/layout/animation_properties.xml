<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset" />

    <GridLayout
        android:id="@+id/counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2" >

        <TextView
            android:layout_gravity="left"
            android:text="@string/count" />

        <EditText
            android:id="@+id/count"
            android:layout_gravity="fill_horizontal"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:layout_gravity="left"
            android:text="@string/increment" />

        <EditText
            android:id="@+id/increment"
            android:layout_gravity="fill_horizontal"
            android:ems="10"
            android:inputType="text" />

        <CheckBox
            android:id="@+id/recordScore"
            android:layout_columnSpan="2"
            android:layout_gravity="left"
            android:text="@string/record_score" />
    </GridLayout>

    <GridLayout
        android:id="@+id/changePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3" >

        <TextView android:text="@string/page_number" />

        <EditText
            android:id="@+id/pageNumber"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="left"
            android:text="@string/page_effect" />

        <Spinner
            android:id="@+id/pageEffect"
            android:layout_gravity="left" />

        <Space
            android:layout_column="2"
            android:layout_gravity="fill_vertical"
            android:layout_row="0"
            android:layout_rowSpan="2" />
    </GridLayout>
    
    <LinearLayout
        android:id="@+id/stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_name" />
        <Spinner
            android:id="@+id/eventName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/move"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/duration" />

            <EditText
                android:id="@+id/duration"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
            	android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:ems="10" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/repeat_count" />

            <EditText
                android:id="@+id/repeatCount"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:ems="10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/xdelta" />

            <EditText
                android:id="@+id/xdelta"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
            	android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:ems="10" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/ydelta" />

            <EditText
                android:id="@+id/ydelta"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:ems="10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/r3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/xpos" />

            <EditText
                android:id="@+id/xpos"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
            	android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:ems="10" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/ypos" />

            <EditText
                android:id="@+id/ypos"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:ems="10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/r4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/delay" />

            <EditText
                android:id="@+id/delay"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
            	android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:ems="10" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/angle" />

            <EditText
                android:id="@+id/angle"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:ems="10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/r5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/direction" />

            <Spinner
                android:id="@+id/direction"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />
            
            <Space
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/showApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/r6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/app_store_id" />

            <EditText
                android:id="@+id/appStoreId"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:ems="10" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/r7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/play_store_url" />

            <EditText
                android:id="@+id/playStoreUrl"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textUri" />

        </LinearLayout>
    
        <LinearLayout
            android:id="@+id/r8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/affiliate" />

            <EditText
                android:id="@+id/affiliate"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:ems="10" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/campaign" />

            <EditText
                android:id="@+id/campaign"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:ems="10" />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/openUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/url" />

        <EditText
            android:id="@+id/url"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textUri" />

    </LinearLayout>

    <Spinner
        android:id="@+id/byobject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.teddytab.common.ui.AutoGridView
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="@dimen/small_padding"
    	android:verticalSpacing="@dimen/small_padding"
        android:columnWidth="@dimen/thumbnail_size" />

</LinearLayout>